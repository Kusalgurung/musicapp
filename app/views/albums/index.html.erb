<h1>Listing Albums</h1>

<table class="table">
  <thead>
    <tr>
      <th>Album Image</th>
      <th>Artist</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td> <a href="/albums/<%= album.id %>"><%= image_tag album.album_img.url(:album_index), class: "artist"%></a></td>
        <td><%= link_to album.artist.title, album %></td>
        <td><%= album.title %></td>
        <td><%= link_to 'Show', album %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

