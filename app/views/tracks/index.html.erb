<h1><%= t('.list_track')%></h1>

<table class="table">
  <thead>
    <tr>
      <th><%= t('.artist')%></th>
      <th><%= t('.album')%></th>
      <th><%= t('.title')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
      <tr>
        <td><%= track.album.artist.title %></td>
        <td><%= track.album.title %></td>
        <td><%= track.title %></td>
        <% if user_signed_in?%>
          <% if current_user.id == track.album.artist.user_id %>
            <td><%= link_to t('.edit'), edit_track_path(track), class: "btn btn-default"  %></td>
            <td><%= link_to t('.destroy'), track, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default"  %></td>
          <%end%>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.back'), albums_path, class: "btn btn-default"  %>
