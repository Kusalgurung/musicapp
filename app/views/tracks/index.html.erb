<h1>List of Tracks</h1>

<table class="table">
  <thead>
    <tr>
      <th>Artist</th>
      <th>Album</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
      <tr>
        <td><%= track.album.artist.title %></td>
        <td><%= track.album.title %></td>
        <td><%= link_to track.title, track %></td>
        <td><%= link_to 'Show', track, class: "btn btn-default"  %></td>
        <% if user_signed_in?%>
          <% if current_user.id == track.album.artist.user_id %>
            <td><%= link_to 'Edit', edit_track_path(track), class: "btn btn-default"  %></td>
            <td><%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default"  %></td>
          <%end%>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', albums_path, class: "btn btn-default"  %>
