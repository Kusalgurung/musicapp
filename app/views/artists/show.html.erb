<div class="row">
	<div class="col-md-4">
		<%= image_tag @artist.artist_img.url(:artist_show), class: "artist-show"%>
	</div>
	<div class="col-md-8">
		<p>
		  <strong>Title:</strong>
		  <%= @artist.title %>
		</p>
		<p>
		  <strong>Biography:</strong>
		  <%= @artist.biography %>
		</p>
		<p> Albums: </p>
		<table class="table">
			<% @artist.albums.each do |album| %>
			  <tr id='<%="album_#{album.id}"%>'>
					<td><%= album.title%></td>
					<td><%= link_to 'Show',album , class: "btn btn-default"%></td>
					<% if user_signed_in?%>
						<% if @artist.user_id == current_user.id %>
					        <td><%= link_to 'Edit', edit_album_path(album), class: "btn btn-default" %></td>
							<td><%= link_to 'Destroy',album, :method => :delete, :data => { :confirm => 'Are you sure?' }, :remote => true , class: "btn btn-default"%></td>
						<% end %>
					<% end %>
			  </tr>
			  <%end%>
		</table>
		<% if user_signed_in?%>
			<% if @artist.user_id == current_user.id %>	
				<p><%= link_to 'Add Album', new_album_path(artist_id: @artist), class: "btn btn-default" %></p>
			<%end%>
		<%end%>


	</div>
</div>

<%= link_to 'Back', artists_path , class: "btn btn-default"%>