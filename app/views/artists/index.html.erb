<p id="notice"><%= notice %></p>

<h1 class="current-genre"><%= params[:genre]%></h1>

<% if @artists.count == 0 %>
  <h1>There are no artists currently in this genre</h1>
<% else %>

<table>
  <thead>
    <tr>
      <th>Artist Image</th>
      <th>Title</th>
      <th>Biography</th>
      <th>Genre</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr id='<%="artist_#{artist.id}"%>'>
        <td> <a href="/artists/<%= artist.id %>"><%= image_tag artist.artist_img.url(:artist_index)%></a></td>
        <td><%= link_to artist.title, artist %></td>
        <td><%= artist.biography %></td>
        <td><%= link_to artist.genre.name, artist %></td>
        <td><%= link_to 'Show', artist %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist) %> </td> 
        <td><%= link_to 'Destroy',artist, :method => :delete, :data => { :confirm => 'Are you sure?' }, :remote => true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>




